<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body class="bg-base-100 text-base-content">

  <%- include('partials/navbar', { page: '/lego/sets' }) %>

  <div class="hero bg-base-200 rounded-lg p-6">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Collection</h1>
        <p class="py-6">Explore our extensive Lego set collection by theme!</p>
        <div class="flex justify-center space-x-4">
          <a href="/lego/sets?theme=technic" class="btn btn-secondary">Technic</a>
          <a href="/lego/sets?theme=classic town" class="btn btn-secondary">Classic Town</a>
          <a href="/lego/sets?theme=supplemental" class="btn btn-secondary">Supplemental</a>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto p-6">
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Theme</th>
            <th>Year</th>
            <th>Parts</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% sets.forEach(set => { %>
            <tr>
              <td>
                <div class="avatar">
                  <div class="w-16 rounded">
                    <img src="<%= set.img_url %>" alt="<%= set.name %>">
                  </div>
                </div>
              </td>
              <td><%= set.name %></td>
              <td>
                <a href="/lego/sets?theme=<%= set.theme %>" class="btn btn-outline btn-sm">
                  <%= set.theme %>
                </a>
              </td>
              <td><%= set.year %></td>
              <td><%= set.num_parts %></td>
              <td>
                <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary btn-sm">Details</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>
